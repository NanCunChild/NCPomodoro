.body{
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
}
.PomodoroIcon{
  width: 200rpx;
  height: 200rpx;
  border:0rpx black solid;
  border-radius: 100rpx;
}
.AboutBar{
  width: 720rpx;
  /* height: auto; */
  margin: 20rpx 10rpx 20rpx 10rpx;
  border:  0.8rpx solid rgb(146, 133, 133);
  border-radius: 30rpx;
}
.AboutText{
  font-size: 34rpx;
  text-align: left;
  margin: 10rpx 10rpx 10rpx 10rpx;
  padding: 10rpx 0rpx;
}
.AboutLine{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center; 
}
.details{
  font-size: 30rpx;
  color: #999999;
  margin: 10rpx 25rpx;
}
.DeveloperCards .details{
  margin: 10rpx 5rpx;
}

.imgs{
  height: 60rpx;
  width: 60rpx;
  border: solid #999999 2rpx;
  border-radius: 32rpx;
}
.version{
  font-size: 23rpx;
  margin: 5rpx;
  padding: 0rpx;
  color: #999999;
  display: flex;
  justify-content: center;
}
.VmeContainer{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center; 
}
.VmeImg{
  width: 200rpx;
  height: 200rpx;
}
.RightParty{
  color: rgb(41, 151, 50);
  font-size: 28rpx;
}
.SelectableText{
  font-size: 30rpx;
}
.DevelopersScrolls{
  width: 660rpx;
  height: 460rpx;
  margin: 40rpx;
}
.DeveloperCards{
  display: flex;
  justify-content: center;
  flex-direction: row;
  align-items: center;
  justify-content: center; 
  width: 650rpx;
}